@using homecoming.webapp.ViewModel;
@model IEnumerable<AccomodationViewModel>

@{
    ViewData["Title"] = "Accomodation Page";
}

<div class="container">
    <div>
        
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="card align-content-center" style="display: inline-block; width: 18rem; margin: 2px; border-radius: 5px; margin-top: 5px; margin-top: 80px">
                    <img class="card-img-top" src="https://homecoming-api.herokuapp.com/Uploads/Accomodations/@item.CoverPhoto" alt="BusinessImage" width="200" height="200" />
                    <div class="card-body">
                        <h5 class="card-title">@item.AccomodationName</h5>
                        <hr />
                        <p class="card-text">@item.Location</p>
                    </div>
                </div>
              }
         }
         
    </div>

</div>
