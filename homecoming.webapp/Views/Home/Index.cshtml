@using homecoming.webapp.ViewModel
@model IEnumerable<AccomodationViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class = "container">
   <div>
      @foreach (var item in Model)
      {
          <div class ="align-content-center">
                 
                   <div class="align-content-center">
                    <img height="120" width ="120" style="margin-left:30px; margin-top:30px" src ="https://localhost:44379/Uploads/Thumbnails/@item.Business.CoverPhotoUrl"  />
                    <p>@item.Business.BusinessName</p>
                    <p>@item.Business.Email</p>
                    <p>@item.Business.Province</p>
                   </div>
                   <br>
                   <img class="align-content-center" height="160" width ="160" style="margin-left:30px; margin-top:30px" src ="https://localhost:44379/Uploads/Accomodations/@item.CoverPhoto" />
                  <p>@item.AccomodationName</p>
                  <br />
                  <p>@item.Location</p>
                  <br />
                  <p>@item.Description</p>

                  <ul class="list-group list-group-horizontal">
                      @foreach (var i in item.AccomodationGallary)
                     {
                        <li class="list-group-item">
                            <img src ="https://localhost:44379/Uploads/Accomodations/@i.ImageUrl"  height="90" width="90" style="margin:5px; padding:8px"/>
                        </li> 
                     }
          </ul>
          </div>
      }
   </div>

</div>
